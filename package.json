{
  "name": "@eslint/js",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "npm test --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "build:readme": "node tools/update-readme.js",
    "lint": "eslint .",
    "lint:fix": "eslint --fix ."
  },
  "workspaces": [
    "packages/*"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "common-tags": "^1.8.2",
    "eslint": "^9.4.0",
    "eslint-config-eslint": "^11.0.0",
    "globals": "^15.1.0",
    "got": "^14.4.1",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "yorkie": "^2.0.0"
  }
}
